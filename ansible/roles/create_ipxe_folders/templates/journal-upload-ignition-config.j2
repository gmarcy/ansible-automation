{
  "storage": {
    "files": [
      {
        "path": "/etc/systemd/journal-upload.conf",
        "mode": 420,
        "overwrite": true,
        "user": {
          "name": "root"
        },
        "contents": {
          "source": "data:text/plain;base64,{{ ('[Upload]\nURL=https://' + journal_remote_fqdn + ':19532\nServerKeyFile=-\nServerCertificateFile=-\nTrustedCertificateFile=-\n') | b64encode }}"
        }
      },
      {
        "path": "/etc/systemd/system/systemd-journal-upload.service.d/wait-for-okd.conf",
        "mode": 420,
        "overwrite": true,
        "user": {
          "name": "root"
        },
        "contents": { "source": "data:text/plain;base64,{{ '[Unit]\nWants=okd-overlay.service\nAfter=okd-overlay.service\n' | b64encode }}" }
      }
    ]
  },
  "systemd": {
    "units": [
      {
          "name": "systemd-journal-upload.service",
          "enabled": true
      }
    ]
  }
}
